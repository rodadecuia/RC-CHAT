#-- Integração WHMCS --#
REACT_APP_WHMCS_PANEL_URL=https://your-whmcs-domain.com/admin/supporttickets.php?action=viewticket&id=
WHMCS_API_URL=https://your-whmcs-domain.com/includes/api.php
WHMCS_API_IDENTIFIER=
WHMCS_API_SECRET=
WHMCS_PANEL_URL=${REACT_APP_WHMCS_PANEL_URL}
WHMCS_WEBHOOK_TOKEN=YOUR_SECURE_WEBHOOK_TOKEN
